{
  "name": "storybook-kit",
  "description": "A base Drupal distribution for building themes with SDC and Storybook",
  "license": "GPL-2.0",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/eslint-parser": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@eslint/js": "^9.27.0",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/builder-vite": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.2.1",
    "css-loader": "^6.11.0",
    "eslint": "^9.27.0",
    "eslint-plugin-storybook": "^0.12.0",
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
    "globals": "^15.15.0",
    "jquery": "^3.7.1",
    "js-yaml": "^4.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss-loader": "^8.1.1",
    "postcss-scss": "^4.0.9",
    "sass": "^1.89.0",
    "sass-loader": "^14.2.1",
    "storybook": "^8.6.14",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.12.0",
    "vite": "^6.3.5",
    "vite-plugin-twig-drupal": "^1.6.0",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-remove-empty-scripts": "^1.1.1"
  },
  "scripts": {
    "test": "npm run lint:sass && npm run lint:js",
    "fix": "npm run fix:sass && npm run fix:js",
    "build": "npx webpack --config webpack.config.js --mode='production'",
    "build:dev": "npx webpack --config webpack.config.js --mode='development'",
    "watch": "npx webpack --config webpack.config.js --mode='development' --watch",
    "lint:sass": "npx stylelint \"docroot/*/custom/**/*.scss\"",
    "fix:sass": "npx stylelint \"docroot/*/custom/**/*.scss\" --fix",
    "lint:js": "npx eslint \"docroot/**/custom/**/*.js\" --ignore-pattern \"**/node_modules/*\"",
    "fix:js": "npx eslint \"docroot/**/custom/**/*.js\" --ignore-pattern \"**/node_modules/*\" --fix",
    "compile-stories": "node .storybook/utils/generate-stories.js",
    "prestorybook": "npm run compile-stories",
    "storybook": "storybook dev -p 6006 --ci",
    "build-storybook": "storybook build"
  }
}

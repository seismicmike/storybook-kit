{% set size = size|default('sm') %}
{% set align = align|default('left') %}
{% set classes = [
  'social-icons',
  'social-icons--' ~ size,
	'social-icons--' ~ align,
] %}

<div {{ attributes }}>
	<div class="{% for class in classes %} {{class}}{% endfor %}">
		{% if icons %}
			{% for icon in icons %}
				<div class="social-icons__icon social-icons__icon--{{icon.icon}}">
					{% include 'sb_bazo:social_button' with {
						icon: icon.icon,
						url: icon.url,
						size: size
					} only %}
				</div>
			{% endfor %}
		{% endif %}
	</div>
</div>

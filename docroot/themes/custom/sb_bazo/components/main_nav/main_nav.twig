<section data-component-id="sb_bazo:main_nav" class="main-nav-bar">
	<div class="main-nav sb-bazo-container">
		<div class="main-nav__menu">
			{% block menu %}
				{% if menu %}
					{{menu}}
				{% endif %}
			{% endblock %}
		</div>
		<div
			class="main-nav__search">
			{# Keep the outer div whenever possible it is a nice way to ensure the presence of "attributes" #}
			{% block search %}
				{% if search %}
					{{search}}
				{% else %}
					SEARCH
				{% endif %}
			{% endblock %}
		</div>
	</div>
</section>
